{
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "globals": {},
  "rules": {
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/services",
            "from": "./src/components"
          },
          {
            "target": "./src/services",
            "from": "./src/lib"
          },
          {
            "target": "./src/services",
            "from": "./src/pages"
          },
          {
            "target": "./src/lib",
            "from": "./src/pages"
          },
          {
            "target": "./src/components",
            "from": "./src/pages"
          }
        ]
      }
    ]
  }
}
